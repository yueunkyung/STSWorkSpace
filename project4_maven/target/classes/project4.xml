	p:driverClassName="oracle.jdbc.driver.OracleDriver"
	p:url="jdbc:oracle:thin:@localhost:1521:XE"
	p:username="hr"
	p:password="hr"
	class="org.springframework.jdbc.datasource.DriverManagerDataSource" />
	
